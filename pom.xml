<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.osiam</groupId>
    <artifactId>osiam-distribution</artifactId>
    <version>1.4-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>OSIAM Distribution Creator</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.7</java.version>
        <org.osiam.version>1.4-SNAPSHOT</org.osiam.version>
        <project.finalname>${project.artifactId}-${project.version}</project.finalname>
    </properties>

    <scm>
        <connection>scm:git:ssh://git@github.com/osiam/distribution.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/osiam/distribution.git</developerConnection>
      <tag>HEAD</tag>
  </scm>

    <repositories>
        <repository>
            <id>osiam releases repo</id>
            <url>https://maven-repo.evolvis.org/releases</url>
        </repository>
        <repository>
            <id>osiam snapshots repo</id>
            <url>https://maven-repo.evolvis.org/snapshots</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.osiam</groupId>
            <artifactId>osiam-server-distribution</artifactId>
            <version>${org.osiam.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.osiam</groupId>
            <artifactId>addon-self-administration</artifactId>
            <version>${org.osiam.version}</version>
            <type>zip</type>
            <classifier>distribution</classifier>
        </dependency>
        <dependency>
            <groupId>org.osiam</groupId>
            <artifactId>addon-administration</artifactId>
            <version>${org.osiam.version}</version>
            <type>zip</type>
            <classifier>distribution</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.goldin</groupId>
                <artifactId>copy-maven-plugin</artifactId>
                <version>0.2.5</version>
                <executions>
                    <execution>
                        <id>distribution-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <targetPath>${project.build.directory}/assembly-tmp/raw</targetPath>
                                    <dependencies>
                                        <dependency>
                                            <groupId>org.osiam</groupId>
                                            <artifactId>osiam-server-distribution</artifactId>
                                            <version>${org.osiam.version}</version>
                                            <type>zip</type>
                                        </dependency>
                                        <dependency>
                                            <groupId>org.osiam</groupId>
                                            <artifactId>addon-self-administration</artifactId>
                                            <version>${org.osiam.version}</version>
                                            <type>zip</type>
                                            <classifier>distribution</classifier>
                                        </dependency>
                                        <dependency>
                                            <groupId>org.osiam</groupId>
                                            <artifactId>addon-administration</artifactId>
                                            <version>${org.osiam.version}</version>
                                            <type>zip</type>
                                            <classifier>distribution</classifier>
                                        </dependency>
                                    </dependencies>
                                    <unpack>true</unpack>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/assembly-tmp/final/${project.finalname}/addon-self-administration</targetPath>
                                    <directory>${project.build.directory}/assembly-tmp/raw/addon-self-administration-${org.osiam.version}</directory>
                                    <move>true</move>
                                    <preservePath>true</preservePath>
                                    <exclude>**/README.txt</exclude>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/assembly-tmp/final/${project.finalname}/osiam-server</targetPath>
                                    <directory>${project.build.directory}/assembly-tmp/raw/osiam-server-distribution-${org.osiam.version}</directory>
                                    <move>true</move>
                                    <preservePath>true</preservePath>
                                    <exclude>**/README.txt</exclude>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/assembly-tmp/final/${project.finalname}/addon-administration</targetPath>
                                    <directory>${project.build.directory}/assembly-tmp/raw/addon-administration-${org.osiam.version}</directory>
                                    <move>true</move>
                                    <preservePath>true</preservePath>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/assembly-tmp/final/${project.finalname}/</targetPath>
                                    <file>${basedir}/README.txt</file>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/${project.artifactId}-${project.version}.tar.gz</targetPath>
                                    <directory>${project.build.directory}/assembly-tmp/final/${project.finalname}</directory>
                                    <pack>true</pack>
                                    <prefix>${project.artifactId}-${project.version}</prefix>
                                    <attachArtifact>true</attachArtifact>
                                </resource>
                                <resource>
                                    <targetPath>${project.build.directory}/${project.artifactId}-${project.version}.zip</targetPath>
                                    <directory>${project.build.directory}/assembly-tmp/final/${project.finalname}</directory>
                                    <pack>true</pack>
                                    <prefix>${project.artifactId}-${project.version}</prefix>
                                    <attachArtifact>true</attachArtifact>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <tagNameFormat>v@{project.version}</tagNameFormat>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>

        <profile>
            <id>integration</id>
            <distributionManagement>
                <repository>
                    <id>osiam-repository</id>
                    <name>public evolvis release repository</name>
                    <url>scpexe://maven-repo.evolvis.org:/var/www/maven_repo/releases</url>
                </repository>
                <snapshotRepository>
                    <id>OSIAM-NG-SNAPSHOT-repository</id>
                    <name>public evolvis release repository</name>
                    <url>scpexe://maven-repo.evolvis.org:/var/www/maven_repo/snapshots/</url>
                </snapshotRepository>
            </distributionManagement>

            <repositories>
                <repository>
                    <id>osiam releases repo</id>
                    <url>https://maven-repo.evolvis.org/releases</url>
                </repository>
            </repositories>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>2.8.1</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.maven.wagon</groupId>
                                <artifactId>wagon-ssh-external</artifactId>
                                <version>2.6</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>default-deploy</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
